<%= form_for @topic, url: {action: "create"} do |f| %>
  <%= f.label 'Title:' %>
  <%= f.text_field :title %>
  <%= f.label 'Content:' %>
  <%= f.text_area :content, size: '40x20' %>
  <%= f.select :node_id, options_for_select(Node.all.map{|node| [node.name, node.id]}) %>
  <%= f.submit 'Create' %>
<% end %>
